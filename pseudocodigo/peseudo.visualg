Algoritmo "Entrega"

Var
   clientes: vetor[1..5] de caracter
   destinos: vetor[1..5] de caracter
   opcao:inteiro
   x:inteiro
   z:inteiro
  
Inicio

escreval      ("  - ======== Bem Vindos a AgÃªncia Turistica Noturna ===========")

   repita
      escreval("1 - ================== Cadastrar Cliente: ======================")
      escreval("2 - ================== Consultar Clientes: ======================")
      escreval("3 - ================== Cadastrar Destinos: ======================")
      escreval("4 - ================== Consultar Destinos: ======================")
      escreval("5 - ========================= Sair ============================== ")
      leia(opcao)

      escolha(opcao)

      caso 1
      limpatela
         para x de 1 ate 5 faca
         escreval("Digete o nome do cliente: ")
         escreval("Digite o email do cliente : ")
          leia(clientes[x])
          fimpara
           caso 2
           limpatela
         para x de 1 ate 5 faca
          escreval("Cliente Consultado : ",clientes[x])
          fimpara
           caso 3
           limpatela
         para z de 1 ate 5 faca
         escreval("Digete o Destino : ")
          escreval("Digete o Valor a pagar para esse Destino : ")
          leia(destinos[z])
          fimpara
           caso 4
           limpatela
         para z de 1 ate 5 faca
          escreval("Destino Consultado : ",destinos[z])
          fimpara
           caso 5
           limpatela
         escreval("Programa Finalizado!!!")

          outrocaso
          limpatela
          escreval("Opcao Invalida!")
          escreval("Tente Novamente!")
          fimescolha

         ate opcao = 5

Fimalgoritmo

